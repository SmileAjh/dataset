<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="allen.tencnet.baidulocation.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="6dp"
        android:background="#00fff0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:layout_below="@+id/showStatus"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:background="@color/buttonbackgroud"
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="刹车"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"/>

        <Button
            android:background="@color/buttonbackgroud"
            android:id="@+id/stopend"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="停车"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll2"
        android:layout_below="@+id/ll1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:background="@color/buttonbackgroud"
            android:id="@+id/changelanes"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="换道"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            />
    <Button
        android:background="@color/buttonbackgroud"
        android:layout_below="@+id/changelanes"
        android:id="@+id/wheel"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="转弯"
        android:textSize="20sp"
        android:layout_weight="1"
        />
    </LinearLayout>

    <Button
        android:id="@+id/addfence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始定位"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:background="#1166bb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll3"
        android:orientation="horizontal"
        android:layout_below="@+id/ll2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <Button
        android:background="@color/buttonbackgroud"
        android:id="@+id/uturn"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="调头"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
    />

        <Button
            android:background="@color/buttonbackgroud"
            android:id="@+id/normal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="正常行驶"
            android:textSize="20sp"
            android:layout_weight="1"
        />
    </LinearLayout>

    <TextView
        android:textSize="20sp"
        android:text=""
        android:background="#aabbbb"
        android:id="@+id/showStatus"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:gravity="center"
        android:textColor="#7cfc00"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
